<head>
    <title>Redeemed</title>


</head>

<body>
    <div class="container">
        <br>
        <br>
        <br>
        <div class="columns">
            <div class="column is-half">
                <strong style="font-size: large;">
                    Redeemed coupons:
                </strong>
            </div>
            <div class="column is-half">
                <strong style="font-size: large;">
                    Current Balance: <%= req.session.coin %>
                </strong>
            </div>
        </div>

        
            <div class="columns is-multiline is-mobile">
                <% users.redeemed.forEach( function(qpon) { %>
                <div class="column is-one-third">
                    <div class="box">
                        <img src="<%= qpon.image %>" width="300" height="300">
                        <div>
                            <a class="hyperlink" href="http://localhost:1337/qpon/read/<%= qpon.id %>"><strong
                                    style="font-size: x-large;"><%= qpon.restaurant %></strong></a>
                            <p><%= qpon.title %></p>
                            <br>
                            <p>Coins: <%= qpon.coins %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        
    </div>

    </div>
</body>